{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "removeComments": true
  },
  "exclude": [
    "release"
  ]
}